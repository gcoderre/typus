<%
  page_title = Typus::I18n.t("Add New %{resource}", :resource => @resource.model_name.human)
  title(page_title)
%>

<% content_for :main_grid do %>

<%= display_flash_message %>
<%= render 'new' %>

<div class="boxed">
  <div class="page-heading padded clearfix">
    <h2>
    <%= page_title %>
    <small><%= list_actions %></small>
  </h2>
</div> 

<% locals = { :options => params.dup.cleanup.merge(:action => 'create') } %>
<%= render 'form', locals %>
</div>
<% end %>

<div class="grid_2">
  <%= build_sidebar %>
</div>

<div class="grid_8">
  <%= yield :main_grid %>
</div>
