<div id="sidebar">

  <% resources.each do |resource, actions| %>

    <% klass = resource.constantize %>
    <% css_class = "active" if @resource.model_name.eql?(resource) %>
    
    <ul>

      <%= link_to({:controller => "/admin/#{klass.to_resource}"}, {:class => css_class}) do %>
        <li class="header"><%= klass.model_name.human(:count => 2) %></li>
      <% end %>

      <% if @resource.model_name.eql?(resource) %>
        <ul>
          <% actions.each do |action| %>
            <li><%= link_to action[:message], action[:url] %></li>
          <% end %>
        </ul>
      <% end %>

    </ul>

  <% end %>

</div>